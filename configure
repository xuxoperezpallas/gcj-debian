#!/bin/bash

# Verificación de herramientas de compilación
echo "Verificando herramientas de compilación..."
if ! command -v gcc &> /dev/null
then
    echo "gcc no está instalado. Instálalo y vuelve a intentarlo."
    exit 1
fi

if ! command -v javac &> /dev/null
then
    echo "javac no está instalado. Instálalo y vuelve a intentarlo."
    exit 1
fi

echo "Todas las herramientas necesarias están instaladas."

# Configuración del proyecto
echo "Configurando el proyecto..."
# Aquí puedes agregar más configuraciones según sea necesario

echo "Configuración completada."
